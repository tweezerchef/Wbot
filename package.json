{
  "name": "wbot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:all": "concurrently -n web,ai,db,redis -c blue,green,yellow,red \"pnpm dev:web\" \"pnpm dev:ai\" \"pnpm db:start\" \"pnpm redis:start\"",
    "dev:web": "turbo dev --filter=@wbot/web",
    "dev:ai": "cd apps/ai && uv run langgraph dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deps:install": "./scripts/install-deps.sh",
    "clean": "turbo clean",
    "db:start": "pnpm exec supabase start",
    "db:stop": "pnpm exec supabase stop",
    "db:reset": "pnpm exec supabase db reset",
    "db:push": "pnpm exec supabase db push",
    "db:push:remote": "pnpm exec supabase db push --linked",
    "db:status": "pnpm exec supabase migration list",
    "db:diff": "pnpm exec supabase db diff --use-migra",
    "db:new": "pnpm exec supabase migration new",
    "db:generate-types": "pnpm exec supabase gen types typescript --local > packages/shared/src/types/database.ts",
    "db:link": "pnpm exec supabase link",
    "redis:start": "docker run -d --name wbot-redis -p 6379:6379 redis:alpine && echo 'Redis started on localhost:6379'",
    "redis:stop": "docker stop wbot-redis && docker rm wbot-redis && echo 'Redis stopped'",
    "redis:status": "docker ps --filter name=wbot-redis --format '{{.Status}}' || echo 'Redis not running'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supabase": "^2.70.5",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.51.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ],
    "apps/ai/**/*.py": [
      "bash -c 'cd apps/ai && uv run ruff check --fix'",
      "bash -c 'cd apps/ai && uv run ruff format'"
    ]
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20"
  }
}
