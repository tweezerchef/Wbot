{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../apps/web/src/*"],
      "@wbot/shared": ["../../packages/shared/src"]
    }
  },
  "include": [".storybook/**/*", "stories/**/*"],
  "exclude": ["node_modules", "dist"]
}
